# Standard behaviour for ftpd(8).
auth	required	pam_listfile.so item=user sense=deny file=/etc/ftpusers onerr=succeed

# Note: vsftpd handles anonymous logins on its own. Do not enable pam_ftp.so.

# Standard pam includes
#@include common-account
@include common-session
#@include common-auth
#auth	required	pam_shells.so
auth required pam_mysql.so verbose=1 user=vsftpd passwd=carlos host=localhost db=vsftpd table=usuarios usercolumn=nombre passwdcolumn=password statcolumn=estado crypt=3 sqllog=true logtable=registro logmsgcolumn=mensaje logusercolumn=usuario logpidcolumn=proceso loghostcolumn=cliente logtimecolumn=hora

